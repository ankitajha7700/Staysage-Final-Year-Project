<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <title>Staysage</title>
  </head>
  <body class="bg-black">
    <div class="min-h-screen flex">
      <div class="hidden lg:flex lg:w-1/2 items-center justify-center">
        <h1 class="text-white text-[6vw]" style="text-shadow: 0 0 0.3rem rgba(255,255,255,0.4), 0 0 0.8rem rgba(255,255,255,0.3), 0 0 2rem rgba(255,255,255,0.2);"><i class="ri-home-6-fill"></i>Staysage</h1>
      </div>

      <div class="w-full lg:w-1/2 flex items-center justify-center p-8">
        <div class="w-full max-w-md">
          <% if(error && error.length > 0) { %>
          <div
            class="bg-red-900 border border-red-800 text-red-100 px-4 py-3 rounded mb-4"
          >
            <%= error %>
          </div>
          <% } %>

          <!-- S Logo for mobile -->
          <div class="lg:hidden mb-[10vw]">
            <h1 class="text-white  text-[6vh]"><i class="ri-home-6-fill"></i>Staysage</h1>

          </div>

          <h1 class="text-3xl font-semibold mb-8 text-white">Book now</h1>

          <div class="flex justify-center mb-8">
            <button
              id="showLogin"
              class="px-6 py-2 text-sm font-medium text-white border-b-2 border-white"
            >
              Sign in
            </button>
            <button
              id="showRegister"
              class="px-6 py-2 text-sm font-medium text-gray-500 border-b-2 border-transparent ml-4"
            >
              Sign up
            </button>
          </div>

          <!-- Login Form -->
          <form
            id="loginForm"
            action="/users/login"
            method="POST"
            class="space-y-6"
          >
            <div>
              <label
                class="block text-gray-300 text-sm font-medium mb-2"
                for="email"
                >Email</label
              >
              <input
                class="w-full px-4 py-2 bg-black border border-gray-800 rounded-md focus:outline-none focus:border-blue-500 text-white"
                type="email"
                name="email"
                required
              />
            </div>
            <div>
              <label
                class="block text-gray-300 text-sm font-medium mb-2"
                for="password"
                >Password</label
              >
              <input
                class="w-full px-4 py-2 bg-black border border-gray-800 rounded-md focus:outline-none focus:border-blue-500 text-white"
                type="password"
                name="password"
                required
              />
            </div>
            <button
              class="w-full bg-white text-black font-semibold py-2 px-4 rounded-full hover:bg-gray-200 transition duration-200"
            >
              Sign in
            </button>
          </form>

          <!-- Register Form -->
          <form
            id="registerForm"
            action="/users/register"
            method="POST"
            class="hidden space-y-6"
          >
            <div>
              <label
                class="block text-gray-300 text-sm font-medium mb-2"
                for="name"
                >Full Name</label
              >
              <input
                class="w-full px-4 py-2 bg-black border border-gray-800 rounded-md focus:outline-none focus:border-blue-500 text-white"
                type="text"
                name="name"
                required
              />
            </div>
            <div>
              <label
                class="block text-gray-300 text-sm font-medium mb-2"
                for="email"
                >Email</label
              >
              <input
                class="w-full px-4 py-2 bg-black border border-gray-800 rounded-md focus:outline-none focus:border-blue-500 text-white"
                type="email"
                name="email"
                required
              />
            </div>
            <div>
              <label
                class="block text-gray-300 text-sm font-medium mb-2"
                for="contact"
                >Phone</label
              >
              <input
                class="w-full px-4 py-2 bg-black border border-gray-800 rounded-md focus:outline-none focus:border-blue-500 text-white"
                type="tel"
                name="contact"
                required
              />
            </div>
            <div>
              <label
                class="block text-gray-300 text-sm font-medium mb-2"
                for="password"
                >Password</label
              >
              <input
                class="w-full px-4 py-2 bg-black border border-gray-800 rounded-md focus:outline-none focus:border-blue-500 text-white"
                type="password"
                name="password"
                required
              />
            </div>
            <button
              class="w-full bg-white text-black font-semibold py-2 px-4 rounded-full hover:bg-gray-200 transition duration-200"
            >
              Create account
            </button>
          </form>
        </div>
      </div>
    </div>

    <script>
      const loginForm = document.getElementById("loginForm");
      const registerForm = document.getElementById("registerForm");
      const showLoginBtn = document.getElementById("showLogin");
      const showRegisterBtn = document.getElementById("showRegister");

      showLoginBtn.addEventListener("click", () => {
        loginForm.classList.remove("hidden");
        registerForm.classList.add("hidden");
        showLoginBtn.classList.add("text-white", "border-white");
        showLoginBtn.classList.remove("text-gray-500", "border-transparent");
        showRegisterBtn.classList.remove("text-white", "border-white");
        showRegisterBtn.classList.add("text-gray-500", "border-transparent");
      });

      showRegisterBtn.addEventListener("click", () => {
        registerForm.classList.remove("hidden");
        loginForm.classList.add("hidden");
        showRegisterBtn.classList.add("text-white", "border-white");
        showRegisterBtn.classList.remove("text-gray-500", "border-transparent");
        showLoginBtn.classList.remove("text-white", "border-white");
        showLoginBtn.classList.add("text-gray-500", "border-transparent");
      });
    </script>
  </body>
</html>
