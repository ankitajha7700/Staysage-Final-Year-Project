<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet"/>
    <title>Staysage - Hostel Details</title>
</head>
<body class="bg-black text-white min-h-screen">
    <!-- Navigation -->
    <nav class="fixed top-0 w-full bg-black/90 backdrop-blur-sm border-b border-gray-800 z-50">
        <div class="container mx-auto px-4 py-4 md:py-8 flex items-center justify-between">
            <a href="/hostels">
                <span class="text-xl md:text-2xl font-bold"><i class="ri-home-6-fill text-xl md:text-2xl mr-2"></i>Staysage</span>
            </a>
            <a href="/hostels" class="text-gray-400 hover:text-white transition-colors">
                <i class="ri-arrow-left-line text-xl"></i>
            </a>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container mx-auto px-4 pt-16 md:pt-24 pb-8">
        <div class="max-w-4xl mx-auto">
            <!-- Hostel Card -->
            <div class="bg-gray-900 rounded-lg md:rounded-2xl overflow-hidden border border-gray-800">
                <!-- Image Section -->
                <div class="aspect-[4/3] md:aspect-video relative">
                    <img 
                        src="data:image/jpeg;base64,<%= hostel.image.toString('base64') %>"
                        alt="<%= hostel.name %>"
                        class="w-full h-full object-cover"
                    >
                    <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent"></div>
                </div>

                <!-- Content Section -->
                <div class="p-4 md:p-6">
                    <!-- Header -->
                    <div class="mb-4 md:mb-6">
                        <h1 class="text-xl md:text-3xl font-bold mb-2"><%= hostel.name %></h1>
                        <div class="flex flex-col md:flex-row md:items-center text-gray-400 space-y-2 md:space-y-0 md:space-x-4">
                            <span class="flex items-center">
                                <i class="ri-map-pin-line mr-1"></i>
                                <%= hostel.location %>
                            </span>
                            <span class="flex items-center">
                                <i class="ri-money-dollar-circle-line mr-1"></i>
                                â‚¹<%= hostel.price %>/month
                            </span>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="mb-6 md:mb-8">
                        <h2 class="text-lg font-semibold mb-2 md:mb-3">About this place</h2>
                        <p class="text-sm md:text-base text-gray-400 leading-relaxed"><%= hostel.description %></p>
                    </div>

                    <!-- Contact Section -->
                    <div class="space-y-4">
                        <div class="flex flex-col md:flex-row items-start md:items-center justify-between p-3 md:p-4 bg-gray-800/50 rounded-xl">
                            <div class="flex items-center space-x-3 mb-3 md:mb-0">
                                <div class="w-10 h-10 md:w-12 md:h-12 bg-gray-700 rounded-full flex items-center justify-center">
                                    <i class="ri-user-3-line text-xl md:text-2xl"></i>
                                </div>
                                <div>
                                    <h3 class="font-semibold text-sm md:text-base">Contact Owner</h3>
                                    <p class="text-gray-400 text-sm md:text-base"><%= hostel.contact %></p>
                                </div>
                            </div>
                            <a href="tel:<%= hostel.contact %>" 
                               class="w-full md:w-auto text-center bg-blue-500 hover:bg-blue-600 text-white px-4 md:px-6 py-2 rounded-full transition-colors">
                                Call Now
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Back Button - Mobile -->
            <div class="mt-4 md:hidden">
                <a href="/hostels" 
                   class="block w-full text-center py-3 rounded-xl border border-gray-800 hover:bg-gray-900 transition-colors text-sm">
                    Back to Listings
                </a>
            </div>
        </div>
    </main>
</body>
</html>
